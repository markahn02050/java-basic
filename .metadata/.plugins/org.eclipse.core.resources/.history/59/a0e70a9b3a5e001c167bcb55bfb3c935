package interaction;

public class Buyer {
	
	private int money;
	private int nowMango;
	
	public Buyer(int money) {			
		
		this.money = money;
		
	}
	
	public void BuyMango(Seller mango) {
		
		if(this.money > 0) {
			
			nowMango = mango.getMango() + 1;
				
			money -= mango.getMango() * 1000;
			
		}
		
		else {
			
			System.out.println("돈이 모자랍니다.");
			
		}
		
		
	}
	

}
