package interaction;

public class Seller {
	
	private int money;
	private int mango;
	
	public Seller(int mango) {
		
		
		money = 0;
				
		this.mango = mango;
		
	}
	
	public void sellMango(int mango) {
		
		this.mango -= mango;
		
		this.money += mango * 1000;
		
		
	}
	
	public void showSeller() {
		
		System.out.println("현재 판매자의 소지금과 망고의 개수입니다.");
		System.out.println("소지금: " + money + ", 망고: " + mango);
		
	}

	public int getMango() {
		return mango;
	}
	
	
	

}
