package interaction;

public class Seller {
	
	private int money;
	private int mango;
	
	public Seller(int mango) {
		
		
		this.money = 0;
				
		this.mango = mango;
		
	}
	
	public void sellMango(int mango) {
		
		if(this.mango > 0) {
			
			this.mango -= mango;
			
			this.money += mango * 1000; // 망고 한개에 천원			
					
		}
		
		else {
					
			System.out.println("망고가 모자랍니다.");
			
		}
				
	}
	
	public void showSeller() {
		
		System.out.println("========상인정보========");
		System.out.println("현재소지금: " + money + ", 현재망고재고: " + mango);
		System.out.println("======================");
		
		
	}

	public int getMango() {
		return this.mango;
	}
	
	
	

}
