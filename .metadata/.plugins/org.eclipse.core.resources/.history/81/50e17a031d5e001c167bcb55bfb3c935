package game.interaction;

public class Troll {
	
	private int hp;
	private int atk;
	private int def;
	
	public Troll() {
		
		this.hp = 10;
		this.atk = 5;
		this.def = 2;
	}
	
	public void doBattle(int uAtk) {	
		
		hp = (hp + def) - uAtk;
		
		if(hp <= 0) {
			
			hp = 0; // 필수는 아님, 죽은 몬스터 체력은 0으로 보정
			
		}
		
		System.out.println("트롤의 남은 체력 : " + hp);
		
	}

	public int getHp() {
		return hp;
	}

	public void setHp(int hp) {
		this.hp = hp;
	}

	public int getAtk() {
		return atk;
	}

	public void setAtk(int atk) {
		this.atk = atk;
	}

	public int getDef() {
		return def;
	}

	public void setDef(int def) {
		this.def = def;
	}
	
	

}
